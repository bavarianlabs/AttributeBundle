<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Bavarian\Bundle\AttributeBundle\Model\Schema" table="attribute_schema">
        <id name="id" type="smallint">
            <generator strategy="AUTO" />
            <options>
                <option name="unsigned">true</option>
            </options>
        </id>

        <field name="className" column="class_name" type="string" nullable="false" />

        <one-to-many field="definitions" target-entity="Bavarian\Bundle\AttributeBundle\Model\Definition" mapped-by="schema" fetch="EXTRA_LAZY" orphan-removal="true">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
            <order-by>
                <order-by-field name="orderIndex" direction="ASC" />
            </order-by>
        </one-to-many>
    </entity>

</doctrine-mapping>